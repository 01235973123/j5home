<?xml version="1.0" encoding="utf-8"?>
<extension version="4.2.0" type="plugin" group="eventbooking" method="upgrade">
    <name>Events Booking - Failure Payment Notification</name>
    <author>Tuan Pham Ngoc</author>
    <creationDate>March 2022</creationDate>
    <copyright>Ossolution Team</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <authorEmail>tuanpn@joomdonation.com</authorEmail>
    <authorUrl>https://joomdonation.com</authorUrl>
    <version>5.0.4</version>
    <description>This plugin sends notification to users from selected groups.</description>
    <files>
        <filename plugin="failurepaymentnotification">failurepaymentnotification.php</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="notification_emails" type="text" label="Notification Emails" description="The emails will receive notification when payment failure. Leave it empty to use global emails" />
                <field name="subject" type="text" label="Subject" description="Subject Of The Email" />
                <field name="message" label="Message" type="editor" description="Body Of The Email" filter="raw" />
            </fieldset>
        </fields>
    </config>
</extension>